{
  "extends": "@pax/style-guide/typescript/next",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "theme.config.tsx",
    "tailwind.config.js"
  ],
  "paths": {
    "@components/*": ["components/*"]
  },
  "exclude": ["node_modules"]
}
